# /etc/nscd.conf
#
# An example Name Service Cache config file.  This file is needed by nscd.
#
# Legal entries are:
#
# logfile           <file>
# debug-level       <level>
# threads           <initial #threads to use>
# max-threads       <maximum #threads to use>
# server-user       <user to run server as instead of root>
#     server-user is ignored if nscd is started with -S parameters
# stat-user         <user who is allowed to request statistics>
# reload-count      unlimited|<number>
# paranoia          <yes|no>
# restart-interval  <time in seconds>
#
# enable-cache          <service> <yes|no>
# positive-time-to-live <service> <time in seconds>
# negative-time-to-live <service> <time in seconds>
# suggested-size        <service> <prime number>
# check-files           <service> <yes|no>
# persistent            <service> <yes|no>
# shared                <service> <yes|no>
# max-db-size           <service> <number bytes>
# auto-propagate        <service> <yes|no>
#
# Currently supported cache names (services): passwd, group, hosts, services
#

logfile           <%= @logfile %>
threads           <%= @threads %>
max-threads       <%= @max_threads %>
<% if @server_user_real != nil -%>server-user       <%= @server_user_real %><% end %>
stat-user         <%= @stat_user %>
debug-level       <%= @debug_level %>
reload-count      <%= @reload_count %>
paranoia          <%= @paranoia %>
restart-interval  <%= @restart_interval %>

# passwd
enable-cache          passwd <%= @passwd_enable_cache %>
positive-time-to-live passwd <%= @passwd_positive_time_to_live %>
negative-time-to-live passwd <%= @passwd_negative_time_to_live %>
suggested-size        passwd <%= @passwd_suggested_size %>
check-files           passwd <%= @passwd_check_files %>
persistent            passwd <%= @passwd_persistent %>
shared                passwd <%= @passwd_shared %>
max-db-size           passwd <%= @passwd_max_db_size %>
auto-propagate        passwd <%= @passwd_auto_propagate %>

# group
enable-cache          group <%= @group_enable_cache %>
positive-time-to-live group <%= @group_positive_time_to_live %>
negative-time-to-live group <%= @group_negative_time_to_live %>
suggested-size        group <%= @group_suggested_size %>
check-files           group <%= @group_check_files %>
persistent            group <%= @group_persistent %>
shared                group <%= @group_shared %>
max-db-size           group <%= @group_max_db_size %>
auto-propagate        group <%= @group_auto_propagate %>

# hosts
enable-cache          hosts <%= @hosts_enable_cache %>
positive-time-to-live hosts <%= @hosts_positive_time_to_live %>
negative-time-to-live hosts <%= @hosts_negative_time_to_live %>
suggested-size        hosts <%= @hosts_suggested_size %>
check-files           hosts <%= @hosts_check_files %>
persistent            hosts <%= @hosts_persistent %>
shared                hosts <%= @hosts_shared %>
max-db-size           hosts <%= @hosts_max_db_size %>

# services
enable-cache          services <%= @services_enable_cache %>
positive-time-to-live services <%= @services_positive_time_to_live %>
negative-time-to-live services <%= @services_negative_time_to_live %>
suggested-size        services <%= @services_suggested_size %>
check-files           services <%= @services_check_files %>
persistent            services <%= @services_persistent %>
shared                services <%= @services_shared %>
max-db-size           services <%= @services_max_db_size %>
